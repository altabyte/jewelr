<div class="auth-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field svg-textbox">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'Email address', tabindex: 1 %>
        <%= svg_email %>
      </div>

      <div class="field svg-textbox">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password', tabindex: 2 %>
        <%= svg_password %>
      </div>

      <div class="options">
        <p><%= link_to 'Forgot your password?', new_password_path(resource_name) %></p>
        <% if devise_mapping.rememberable? -%>
            <p>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </p>
        <% end -%>

      </div>

      <div class="actions">
        <%= f.submit 'Log in', tabindex: 3, class: 'hvr-rectangle-inn' %>
      </div>
  <% end %>
  <%#= render 'devise/shared/links' %>
</div>
