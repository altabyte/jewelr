<div id="sign-up-page-form" class="generic-auth-form">

  <h2>Sign up</h2>

  <div class="auth-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field svg-textbox">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email address', tabindex: 1 %>
          <%= svg_email %>
        </div>

        <div class="field svg-textbox">
          <%= f.label :password %>
          <% if @minimum_password_length %>
              <!--em>(<%= @minimum_password_length %> characters minimum)</em-->
          <% end %>
          <%= f.password_field :password, autocomplete: 'off', placeholder: 'Choose Password', tabindex: 2 %>
          <%= svg_password %>
        </div>

        <div class="field svg-textbox">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm Password', tabindex: 3 %>
          <%= svg_password %>
        </div>

        <div class="actions">
          <%= f.submit 'Sign up', tabindex: 4 %>
        </div>
    <% end %>
  </div>

  <%#= render 'devise/shared/links' %>
</div>
