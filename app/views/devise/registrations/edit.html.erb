<div id="edit-authorization-form" class="generic-auth-form">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <div class="auth-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
        <%= devise_error_messages! %>

        <div class="field svg-textbox">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email address', tabindex: 1 %>
          <%= svg_email %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div id="update-password">
          <!--i>(leave blank if you don't want to change it)</i-->
          <div class="field svg-textbox">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: 'off', placeholder: 'New password', tabindex: 2 %>
            <%= svg_password %>
          </div>

          <div class="field svg-textbox">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm new password', tabindex: 3 %>
            <%= svg_password %>
          </div>

          <!--i>(we need your current password to confirm your changes)</i-->
          <div class="field svg-textbox">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, autocomplete: 'off', placeholder: 'Current password', tabindex: 4 %>
            <%= svg_password %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit 'Update' %>
        </div>
    <% end %>

    <hr>
    <h3>Cancel my account</h3>

    <p><%= button_to 'Cancel my account', registration_path(resource_name), data: {confirm: 'Are you sure?'}, method: :delete %></p>
  </div>

  <%#= link_to 'Back', :back %>
</div>