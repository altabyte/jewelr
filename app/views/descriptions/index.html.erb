<p id="notice"><%= notice %></p>

<h1>Listing Descriptions</h1>

<ul id="new-description-buttons">
  <li><%= link_to 'Necklace', new_necklace_path %></li>
  <li><%= link_to 'Bracelet', new_bracelet_path %></li>
  <li><%= link_to 'Earrings', new_earring_path %></li>
</ul>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Acc price</th>
      <th>Target price</th>
      <th>Unique</th>
      <th>Weight net</th>
      <th>Weight gross</th>
      <th>Archived</th>
      <th>Colours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @descriptions.each do |description| %>
      <tr>
        <td><%= description.id %></td>
        <td><%= description.acc_price %></td>
        <td><%= description.target_price %></td>
        <td><%= description.unique %></td>
        <td><%= description.weight_net %></td>
        <td><%= description.weight_gross %></td>
        <td><%= description.archived %></td>
        <td>
          <% description.colours.each do |colour| -%>
          <span style="display: inline-block; width: 20px; border-radius: 4px; background-color: <%= '#' + colour.hex %>;">&nbsp;</span>
          <% end -%>
        </td>
        <td><%= link_to 'Show', sti_description_path(description, description.type, :show) %></td>
        <td><%= link_to 'Edit', sti_description_path(description, description.type, :edit) %></td>
        <td><%= link_to 'Delete', sti_description_path(description, description.type, :delete), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


