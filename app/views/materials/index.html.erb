<h1>Materials</h1>

<h2><%= @type.to_s.pluralize %></h2>
<div id="material-type-links">
  <% unless @type == Material::Gemstone.name -%><%= link_to 'Gemstone', gemstones_path %><% end -%>
  <% unless @type == Material::Metal.name -%><%= link_to 'Metals', metals_path %><% end -%>
  <% unless @type == Material::ManMade.name -%><%= link_to 'Man-mades', man_mades_path %><% end -%>
</div>

<ol class="material-list">
  <%= render_material_index_list(@materials_hash, I18n.locale) %>
</ol>

